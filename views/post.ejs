<%- include('./includes/header.ejs') %>
<div class="container">
    <div class="items">
            <div class="item">
                <a class="post-header" href="/<%= post.id %>"><%= post.header %></a>
                <img src="<%= post.imageUrl %>" alt="Post Image Placeholder">
                <p class="post-content"><%= post.content %></p>
                <div class="actions">
                    <div class="post-option">
                        <form action="/admin?editId=<%= post.id %>" Method="POST">
                            <input type="hidden" name="editPost" value="<%= post.id %>">
                            <button type="submit">Edit Post</button>
                        </form>
                    </div>
                    <div class="post-option">
                        <form action="/<%= post.id %>?delete=true" Method="POST">
                            <input type="hidden" name="deletePostId" value="<%= post.id %>">
                            <button type="submit">Delete Post</button>
                        </form>
                    </div>
                </div>
            </div>   
    </div>
</div>
<%- include('./includes/footer.ejs') %>